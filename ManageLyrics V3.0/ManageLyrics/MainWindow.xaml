<Window x:Class="ManageLyrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:ManageLyrics"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ManagerLyrics"
        Width="800"
        Height="465"
        Style="{DynamicResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Border Margin="5,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="Contact" />
                <Button Margin="5,0,0,0" Content="Mode Dark or Light" Cursor="Hand" />
            </StackPanel>

            <ListView x:Name="listBox"
                      Grid.Row="1"
                      Grid.Column="0"
                      Margin="5,5"
                      AllowDrop="True"
                      ItemsSource="{Binding SongList}">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="DragEnter">
                        <ei:CallMethodAction MethodName="ListDragEnter" TargetObject="{Binding}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="Drop">
                        <ei:CallMethodAction MethodName="ListDrag" TargetObject="{Binding}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListView>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <ComboBox Width="280"
                          Height="20"
                          Margin="5,0,5,0"
                          HorizontalAlignment="Left" />
                <Button Width="80"
                        Height="20"
                        Content="&#xf002;"
                        Cursor="Hand"
                        FontFamily="{StaticResource FontAwesome}" />
            </StackPanel>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,5"
                    BorderBrush="{StaticResource ControlSelectedMouseOverBorderBrush}"
                    BorderThickness="0.5">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Content="Result : "
                               FontSize="12" />
                        <Label Grid.Column="1"
                               Content="Artist : "
                               FontSize="12" />
                        <Label Grid.Column="2"
                               Content="Title : "
                               FontSize="12" />
                    </Grid>

                    <Border>
                        <TextBox Height="305"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 TextWrapping="Wrap" />
                    </Border>

                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="{StaticResource FontAwesomeDeleteIcon}"
                                Cursor="Hand"
                                Style="{StaticResource ButtonIcon}"
                                />
                        <Button Grid.Column="1"
                                Content="{StaticResource FontAwesomeSaveIcon}"
                                Style="{StaticResource ButtonIcon}"
                                />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>